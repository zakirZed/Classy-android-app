<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/classUsersCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent" >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:padding="14dp"
           android:gravity="center"
           android:orientation="horizontal">
           <androidx.cardview.widget.CardView
               android:id="@+id/classUsersImageCard"
               android:layout_width="40dp"
               android:layout_height="40dp"
               app:cardCornerRadius="20dp"
               app:cardBackgroundColor="#00ACC1"
               app:cardElevation="0dp">
               <TextView
                   android:id="@+id/classUsersImage"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:text="LH"
                   android:gravity="center"
                   android:maxLines="1"
                   android:maxLength="3"
                   android:textColor="#ffffff"
                   android:textStyle="bold"
                   android:textSize="16sp"/>
           </androidx.cardview.widget.CardView>
                   <TextView
                       android:id="@+id/classUsersName"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_marginStart="20dp"
                       android:textSize="14sp"
                       android:text="Zakir Alam"
                       android:textColor="#000000"/>

           <RelativeLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1">
               <TextView
                   android:id="@+id/classAdmin"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentEnd="true"
                   android:visibility="gone"
                   android:gravity="center"
                   android:textSize="12sp"
                   android:text="Admin"
                   android:textStyle="italic"
                   android:textColor="#AEEA00"/>
           </RelativeLayout>


       </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>